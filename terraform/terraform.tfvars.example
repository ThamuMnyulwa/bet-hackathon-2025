# Example Terraform variables file
# Copy this to terraform.tfvars and fill in your values

# Required: Your GCP Project ID
project_id = "your-gcp-project-id"

# GCP Region for deployment
region = "us-central1"

# Environment (dev, staging, or prod)
environment = "dev"

# API Keys (sensitive - store securely)
google_api_key     = "your-google-api-key"
transunion_api_key = "your-transunion-api-key"

# Cloud Run Configuration
min_instances         = 1
max_instances         = 10
cpu_limit            = "2"
memory_limit         = "2Gi"
allow_unauthenticated = false  # Set to true for public access

# Redis Configuration
redis_memory_gb = 1
redis_tier      = "STANDARD_HA"  # or "BASIC" for development

# Monitoring
enable_monitoring = true
alert_email      = "your-email@example.com"

# Network Configuration
vpc_cidr       = "10.0.0.0/24"
connector_cidr = "10.1.0.0/28"

# Container Configuration
container_registry = "artifact-registry"  # or "gcr"
image_tag         = "latest"

# Feature Flags
enable_transunion_integration  = true
enable_vertex_ai              = true
enable_rate_limiting          = true
rate_limit_requests_per_minute = 100

# Backup Configuration
enable_backup         = true
backup_retention_days = 30

# Resource Labels
labels = {
  team        = "fraud-detection"
  managed-by  = "terraform"
  cost-center = "security"
  environment = "dev"
}